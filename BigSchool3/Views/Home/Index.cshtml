@model BigSchool3.ViewModels.CoursesViewModel
@{
    ViewBag.Title = "Home Page";
}
<div class="course">
    <ul class="course">
        @foreach (var course in Model.UpcommingCourses)
        {
            <li>
                <div class="date">
                    <div class="month">
                        @course.DateTime.ToString("MM")
                    </div>
                    <div class="day">
                        @course.DateTime.ToString("dd")
                    </div>
                </div>
                <div class="details">

                    <span class="lecturer">
                        @course.Lecturer.Name
                        @if (Model.ShowAction)
                        {
                            <button data-user-id="@course.LecturerId" class="btn btn-default btn-sm js-toggle-follow">Follow</button>
                        }

                    </span> <br />
                    <span class="category">
                        @course.Category.Name
                    </span>
                    @if (Model.ShowAction)
                    {
                       <button data-course-id="@course.Id" class="btn btn-default btn-sm js-toggle-attendance">Going?</button>
                    }
                    
                </div>
            </li>
        }
    </ul>
</div>
@section scripts{
    <script>
            $(document).ready(function () {
                CoursesController.init();

            $(".js-togegle-follow").click(function (e) {
                var button = $(e.target);
            if (button.hasClass("btn-link")) {
                $.post("/api/followings", { followeeId: button.attr("data-user-id") })
                    .done(function () {
                        button
                            .removeClass("btn-link")
                            .addClass("btn-success")
                            .text("Following");
                    })
                    .fail(function () {
                        alert("Something failed!");
                    });
                } else {
                $.ajax({
                    url: "/api/followings/" + button.attr("data-user-id"),
                    method: "DELETE"
                })
                    .done(function () {
                        button
                            .removeClass("btn-success")
                            .addClass("btn-link")
                            .text("Follow");
                    })
                    .fail(function () {
                        alert("Something failed 2!");
                    });
                }
                
            })
        });
    </script>

}