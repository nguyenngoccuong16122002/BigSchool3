@model BigSchool3.ViewModels.CoursesViewModel
@{
    ViewBag.Title = "Attending";
}
<h2>Attending</h2>
<div class="course">
    <ul class="course">
        @foreach (var course in Model.UpcommingCourses)
        {
            <li>
                <div class="date">
                    <div class="month">
                        @course.DateTime.ToString("MM")
                    </div>
                    <div class="day">
                        @course.DateTime.ToString("dd")
                    </div>
                </div>
                <div class="details">

                    <span class="lecturer">
                        @course.Lecturer.Name
                        @if (course.IsCanceled)
                        {
                            <button data-user-id="@course.LecturerId" class="btn btn-default btn-sm js-toggle-follow">Follow</button>
                        }

                    </span> <br />
                    <span class="category">
                        @course.Category.Name
                    </span>
                    @if (Model.ShowAction &&! course.IsCanceled)
                    {
                        <button data-course-id="@course.Id" class="btn btn-default btn-sm js-toggle-attendance">Going?</button>
                    }

                </div>
            </li>
        }
    </ul>
</div>
@section scripts{
    <script>
        $(document).ready(function () {
            $(".js-toggle-attendance").click(function (e) {
                var button = $(e.target);
                $.post("/api/attendances", { courseId: button.attr("data-course-id") })
                    .done(function () {
                        button
                            .removeClass("btn-deafault")
                            .addClass("btn-info")
                            .text("Going");
                    })
                    .fail(function () {
                        alert("something failed!");
                    });
                
            });

            $(".js-toggle-follow").click(function (e) {
                var button = $(e.target);
                $.post("/api/followings", { courseId: button.attr("data-user-id") })
                    .done(function () {
                        button.text("Following");
                    })
                    .fail(function () {
                        alert("something failed!");
                    });
            });
        });


    </script>

}