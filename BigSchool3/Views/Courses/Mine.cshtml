@model IEnumerable<BigSchool3.Models.Course>
@{
    ViewBag.Title = "Mine";
}

<h2>Mine</h2>
    <ul class="course">
        @foreach (var course in Model)
        {
            <li>
                <div class="date">
                    <div class="month">
                        @course.DateTime.ToString("MM")
                    </div>
                    <div class="day">
                        @course.DateTime.ToString("dd")
                    </div>
                </div>
                <div class="details">

                    <span class="lecturer">
                        @course.Lecturer.Name
                       

                    </span> <br />
                    <span class="category">
                        @course.Category.Name
                    </span>
                

                </div>
                <div>
                    <a href="@Url.Action("Edit", "Coures", new {id=course.Id})">Edit</a>
                    <a href="">Delete</a>
                </div>
            </li>
        }
    </ul>